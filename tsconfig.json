{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,            
    "sourceMap": true,
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "dist",
  },
  "exclude": ["__tests__"],
  "lib": ["es2015"]
}
